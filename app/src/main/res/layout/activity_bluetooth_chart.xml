<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020321"
    android:id="@+id/chartMain"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.core.widget.NestedScrollView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarSize="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group1Layout"
            android:background="#0E1D42"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintHorizontal_chainStyle="packed"
                android:id="@+id/group1DataAreaLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/group2DataAreaLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivCurrentOuput"
                    app:layout_constraintTop_toTopOf="@id/clCurrentOuput"
                    app:layout_constraintBottom_toBottomOf="@id/clCurrentOuput"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@android:drawable/btn_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCurrentOuput"
                    android:paddingEnd="10dp"
                    app:layout_constraintStart_toEndOf="@id/ivCurrentOuput"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="현재출력"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tvOutPutTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvOutPutMsg"
                        android:id="@+id/tvCurrentOutPut"
                        app:layout_constraintEnd_toStartOf="@id/tvOutPutMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="kW"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOutPutTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/tvOutPutMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group2DataAreaLayout"
                app:layout_constraintStart_toEndOf="@id/group1DataAreaLayout"
                app:layout_constraintEnd_toStartOf="@id/group3DataAreaLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivTodayPower"
                    app:layout_constraintTop_toTopOf="@id/clTodayPower"
                    app:layout_constraintBottom_toBottomOf="@id/clTodayPower"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@android:drawable/btn_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTodayPower"
                    android:paddingEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivTodayPower"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="금일발전량"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tvTodayPowerTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvTodayPowerMsg"
                        android:id="@+id/tvTodayPower"
                        app:layout_constraintEnd_toStartOf="@id/tvTodayPowerMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="kWh"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTodayPowerTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/tvTodayPowerMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group3DataAreaLayout"
                app:layout_constraintStart_toEndOf="@id/group2DataAreaLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ivTodayPowerTime"
                    app:layout_constraintTop_toTopOf="@id/clTodayPowerTime"
                    app:layout_constraintBottom_toBottomOf="@id/clTodayPowerTime"
                    android:src="@android:drawable/btn_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTodayPowerTime"
                    android:paddingEnd="10dp"
                    app:layout_constraintStart_toEndOf="@id/ivTodayPowerTime"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="금일발전시간"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tvTodayPowerTimeTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvTodayPowerTimeMsg"
                        android:id="@+id/tvTodayPowerTime"
                        app:layout_constraintEnd_toStartOf="@id/tvTodayPowerTimeMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="kWh"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTodayPowerTimeTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/tvTodayPowerTimeMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivPowerStatus"
            app:layout_constraintTop_toTopOf="@id/tvPoworStatusTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvPoworStatusTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:src="@android:drawable/btn_plus"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Power Status"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/group1Layout"
            android:id="@+id/tvPoworStatusTitle"
            app:layout_constraintStart_toEndOf="@id/ivPowerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="5dp"
            android:text="(현재발전기준 : INV)"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@id/tvPoworStatusTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvPoworStatusTitle"
            android:id="@+id/tvPoworStatusSubTitle"
            app:layout_constraintStart_toEndOf="@id/tvPoworStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group2Layout"
            android:layout_marginTop="10dp"
            android:background="#0E1D42"
            app:layout_constraintTop_toBottomOf="@id/tvPoworStatusTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:id="@+id/chart1Layout"
                app:layout_constraintEnd_toStartOf="@id/chart2Layout"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="인버터(DC/AC)변환효율"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvInverterPerTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--<com.example.gauge.CustomGaugeView
                    android:id="@+id/gaugeView"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center" />-->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    app:layout_constraintTop_toBottomOf="@id/tvInverterPerTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/chart1"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvInverterPer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/chart1Layout"
                app:layout_constraintEnd_toStartOf="@id/chart3Layout"
                android:layout_marginStart="10dp"
                android:id="@+id/chart2Layout"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="인버터(DC/AC)변환효율"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvCurrentPowerOutputTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart2"
                    app:layout_constraintTop_toBottomOf="@id/tvCurrentPowerOutputTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/chart2"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvCurrentPowerOutputPer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/chart2Layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:id="@+id/chart3Layout"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="발전효율"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvPowerGenerationEfciencyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart3"
                    app:layout_constraintTop_toBottomOf="@id/tvPowerGenerationEfciencyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/chart3"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvPowerGenerationEfciency"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/group2Layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/powerGLayout"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/alarmLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivPowerGeneration"
                    app:layout_constraintTop_toTopOf="@id/chartPowerGenerationBtnLayout"
                    app:layout_constraintBottom_toBottomOf="@id/chartPowerGenerationBtnLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:src="@android:drawable/btn_plus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/chartPowerGenerationBtnLayout"
                    app:layout_constraintBottom_toBottomOf="@id/chartPowerGenerationBtnLayout"
                    android:text="발전량 추이"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/tvPowerGenerationTitle"
                    app:layout_constraintStart_toEndOf="@id/ivPowerGeneration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/chartPowerGenerationBtnLayout"
                    android:layout_marginStart="10dp"
                    android:background="#0E1D42"
                    app:layout_constraintStart_toEndOf="@id/tvPowerGenerationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/btnRealTImeChart"
                        android:layout_width="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:layout_height="wrap_content">
                        <TextView
                            android:text="실시간"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/tvRealTImeChart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnRealTImeChart"
                        android:id="@+id/ivLine1"
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="5dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivLine1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/btnTodayChart10Min"
                        android:layout_width="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:layout_height="wrap_content">
                        <TextView
                            android:text="금일(예:10Min,순시값)"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/tvTodayChart10Min"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnTodayChart10Min"
                        android:id="@+id/ivLine2"
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="5dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivLine2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/btnTodayChartHour"
                        android:layout_width="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:layout_height="wrap_content">
                        <TextView
                            android:text="금일(1 Hour)"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/tvTodayChartHour"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnTodayChartHour"
                        android:id="@+id/ivLine3"
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="5dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivLine3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/btnTodayChartMonth"
                        android:layout_width="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:layout_height="wrap_content">
                        <TextView
                            android:text="1달(Day)"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/tvTodayChartMonth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="10dp"
                    android:background="#0E1D42"
                    app:layout_constraintTop_toBottomOf="@id/chartPowerGenerationBtnLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/chartPowerGeneration"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="5dp"
                android:id="@+id/alarmLayout"
                app:layout_constraintStart_toEndOf="@id/powerGLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/groupAlarm"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintEnd_toStartOf="@id/ivAlarmMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAlarm"
                        app:layout_constraintTop_toTopOf="@id/tvAlarmTitle"
                        app:layout_constraintBottom_toBottomOf="@id/tvAlarmTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:src="@android:drawable/btn_plus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="알람"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:id="@+id/tvAlarmTitle"
                        app:layout_constraintStart_toEndOf="@id/ivAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageView
                    app:layout_constraintStart_toEndOf="@id/groupAlarm"
                    android:id="@+id/ivAlarmMore"
                    app:layout_constraintTop_toTopOf="@id/groupAlarm"
                    app:layout_constraintBottom_toBottomOf="@id/groupAlarm"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:src="@android:drawable/btn_plus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="5dp"
                    android:background="#0E1D42"
                    app:layout_constraintTop_toBottomOf="@id/groupAlarm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="300dp"
                    android:layout_height="0dp">

                    <Button
                        android:text="GRID CONNECT"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:id="@+id/gridConnectBtn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/upsStandAloneBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                    <Button
                        android:text="UPS STAND ALONE"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:id="@+id/upsStandAloneBtn"
                        app:layout_constraintTop_toBottomOf="@id/gridConnectBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

