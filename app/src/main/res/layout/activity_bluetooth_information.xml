                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@id/tvDeviceInformationSubTitle"
                        app:layout_constraintEnd_toEndOf="@id/tvDeviceInformationTitle"
                        app:layout_constraintStart_toStartOf="@id/tvDeviceInformationTitle"
