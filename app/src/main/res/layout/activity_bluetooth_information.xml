                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toTopOf="@id/tvDeviceRssiTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:id="@+id/tvDeviceRssiTitle"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="Device Rssi"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tvDeviceRssi"
                        app:layout_constraintStart_toStartOf="@id/tvDeviceRssi"
                        app:layout_constraintTop_toBottomOf="@id/tvDeviceRssi"/>
                    <ImageView
                        android:id="@+id/ivHoriLIne1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@color/material_dynamic_primary30"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/deviceRssiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/deviceUUIDLayout">

                    <TextView
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
