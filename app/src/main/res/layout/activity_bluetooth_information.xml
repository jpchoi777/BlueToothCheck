                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        android:id="@+id/tvDeviceLocalName"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="BlueThooth 1"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toTopOf="@id/tvDeviceLocalNameTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:id="@+id/tvDeviceLocalNameTitle"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="Device Local Name"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tvDeviceLocalName"
                        app:layout_constraintStart_toStartOf="@id/tvDeviceLocalName"
                        app:layout_constraintTop_toBottomOf="@id/tvDeviceLocalName"/>
                    <ImageView
                        android:id="@+id/ivHoriLIne"
