                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/deviceMajorClassLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/deviceConnectableLayout">

                    <TextView
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        android:id="@+id/tvDeviceConnectable"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toTopOf="@id/tvDeviceConnectableTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:id="@+id/tvDeviceConnectableTitle"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="Device Connectable"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tvDeviceConnectable"
                        app:layout_constraintStart_toStartOf="@id/tvDeviceConnectable"
                        app:layout_constraintTop_toBottomOf="@id/tvDeviceConnectable"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group2Layout"
                    app:layout_constraintTop_toBottomOf="@id/deviceConnectableLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="30dp">
