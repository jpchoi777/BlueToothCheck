                        android:id="@+id/tvDeviceMajorClass"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toTopOf="@id/tvDeviceMajorClassTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:includeFontPadding="false"
                        android:gravity="start"
                        android:id="@+id/tvDeviceMajorClassTitle"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="Device MajorClass"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tvDeviceMajorClass"
                        app:layout_constraintStart_toStartOf="@id/tvDeviceMajorClass"
                        app:layout_constraintTop_toBottomOf="@id/tvDeviceMajorClass"/>
